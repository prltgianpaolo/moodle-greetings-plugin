{{!
    @template local_greetings/greeting_message

    Template for greetings

    Example context (json):
    {
    }
}}

<div class="box py-3 card-columns">
{{#messages}}
    <div class="card" style="background: {{cardbackgroundcolor}}">
        <div class="card-body">
            <p class="card-text">{{message}}</p>
            <p class="card-text">
                <small class="text-muted">
                    {{#userdate}} {{timecreated}}, {{#str}} strftimedaydatetime, core_langconfig {{/str}} {{/userdate}}
                </small>
            </p>
            <p class="card-text">{{#str}} postedby, local_greetings, {{firstname}} {{/str}}
            </p>
            {{#candeleteany}}
            <p class="card-footer text-center">
            <a href="{{config.wwwroot}}/local/greetings/index.php?action=del&id={{id}}&sesskey={{config.sesskey}}">
            {{#pix}} t/delete {{/pix}}{{#str}} delete {{/str}}
            </a>
            </p>
            {{/candeleteany}}
        </div>
    </div>
{{/messages}}
</div>